<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="10dp"
>
    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/cover_image"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:viewAspectRatio="1.43"
            app:placeholderImageScaleType="centerInside"
            app:placeholderImage="@drawable/ic_live_no_face"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
    />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/cover_image"
            android:layout_margin="5dp"
    >
        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/description_text_size"
                android:text="ha哈哈大ha哈哈大ha哈哈大ha哈哈大ha哈哈大ha哈哈大ha哈哈大ha哈哈大ha哈哈大"
                android:maxLines="2"
                android:ellipsize="end"
        />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_margin="2dp"
        >
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_img_up_name"
                    android:layout_margin="2dp"
            />
            <TextView
                    android:id="@+id/up_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextMessage"
            />

        </LinearLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <LinearLayout
                    android:id="@+id/ll_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
            >
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/ic_img_tv"
                        android:layout_margin="2dp"
                />
                <TextView
                        android:id="@+id/play_num"
                        style="@style/TextMessage"
                        android:text="14.1万"
                />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_damku"
                    android:layout_toRightOf="@id/ll_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
            >
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        app:srcCompat="@drawable/ic_img_danmaku"
                        android:layout_margin="2dp"
                />
                <TextView
                        android:id="@+id/damku_num"
                        style="@style/TextMessage"
                        android:text="14.1万"
                />
                <TextView
                        android:id="@+id/av_num"
                        style="@style/TextMessage"
                        android:text="        "
                />
            </LinearLayout>
            <ImageView
                    android:id="@+id/more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_img_more_menu"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
            />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>