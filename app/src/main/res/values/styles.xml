<resources >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 设置activity切换动画 -->
        <!--<item name="android:windowAnimationStyle">@style/activityAnimation</item>-->
        <!--<item name="android:alertDialogTheme">@android:style/Theme.Holo.Light.Dialog</item>-->
    </style>

    <!--全屏activity-->
    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <!--card style-->
    <style name="cardStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>


    <style name="TextTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/user_name_text_size</item>
        <item name="android:textColor">@color/black_alpha_176</item>
    </style>
    <style name="TextMessage">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/fen_si_text_size</item>
        <item name="android:textColor">@color/black_alpha_112</item>
    </style>



    <style name="image_small">
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_width">15dp</item>
    </style>

    <!--分割线-->
    <style name="between_line">
        <item name="android:layout_height">0.4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/black_alpha_32</item>
    </style>
</resources>
